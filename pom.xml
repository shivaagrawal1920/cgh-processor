    <modelVersion>4.0.0</modelVersion>


    <groupId>uk.co.techblue</groupId>
    <artifactId>cgh-processor</artifactId>
    <version>${application.version}</version>
    <name>CGH Processor</name>
    <packaging>pom</packaging>

    <modules>
        <module>cgh-orm</module>
        <module>cgh-core</module>
        <module>cgh-war</module>
    </modules>

    <description>A processor to process DNA Signal variations</description>

    <properties>
        <application.version>1.0.2</application.version>
        <techblue.maven.repo.baseurl>http://backup.propco.co.uk:8180/nexus-webapp-1.9.2/content/repositories</techblue.maven.repo.baseurl>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>        
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <swt.groupId>org.eclipse.swt</swt.groupId>
        <swt.version>4.2.1</swt.version>
        <jnlp-file-name>cgh-array-processor.jnlp</jnlp-file-name>
        <webstart-dir-name>webstart</webstart-dir-name>
        <jnlp-relative-url>${webstart-dir-name}/${jnlp-file-name}</jnlp-relative-url>
        <webstart-offline-allowed>true</webstart-offline-allowed>
        <webstart-security-all-permissions>true</webstart-security-all-permissions>
        <webstart-codebase-url>$$codebase</webstart-codebase-url>
    </properties>


    <profiles>
        <profile>
            <id>production-release</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>production-release</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <production>true</production>
            </properties>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>techblue-snapshot</id>
            <name>techblue-snapshot-repository</name>
            <url>${techblue.maven.repo.baseurl}/snapshots</url>
            <!-- <snapshots> <updatePolicy>always</updatePolicy> </snapshots> -->
        </repository>
        <repository>
            <id>techblue-release</id>
            <name>techblue-release-repository</name>
            <url>${techblue.maven.repo.baseurl}/releases</url>
        </repository>
        <repository>
            <id>techblue-thirdparty</id>
            <name>techblue-thirdparty-repository</name>
            <url>${techblue.maven.repo.baseurl}/thirdparty</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>techblue-plugin-snapshot</id>
            <name>techblue-snapshot-repository</name>
            <url>${techblue.maven.repo.baseurl}/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </pluginRepository>
        <pluginRepository>
            <id>techblue-plugin-release</id>
            <name>techblue-release-repository</name>
            <url>${techblue.maven.repo.baseurl}/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>techblue-release</id>
            <name>techblue-release-repository</name>
            <url>${techblue.maven.repo.baseurl}/releases</url>
        </repository>
        <snapshotRepository>
            <id>techblue-snapshot</id>
            <name>techblue-snapshot-repository</name>
            <url>${techblue.maven.repo.baseurl}/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.source}</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>2.2.1</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
            </plugin>
            <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>2.3</version>
            </plugin>
            <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>webstart-maven-plugin</artifactId>
                    <version>1.0-beta-4-techblue</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.2.1</version>
                </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.jooq</groupId>
                    <artifactId>jooq-codegen-maven</artifactId>
                    <version>3.0.0-RC3</version>

                    <dependencies>
                        <dependency>
                            <groupId>mysql</groupId>
                            <artifactId>mysql-connector-java</artifactId>
                            <version>5.1.21</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

